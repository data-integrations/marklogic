{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "MarkLogic Execute",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this source for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "8002"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textarea",
          "label": "Query",
          "name": "query",
          "widget-attributes": {
            "rows": "4"
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "name": "connectionType",
          "label": "Connection type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "direct",
            "options": [
              {
                "id": "direct",
                "label": "Direct"
              },
              {
                "id": "gateway",
                "label": "Gateway"
              }
            ]
          }
        },
        {
          "name": "authenticationType",
          "label": "Authentication Type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "digest",
            "options": [
              {
                "id": "digest",
                "label": "Digest"
              },
              {
                "id": "ssl",
                "label": "SSL"
              }
            ]
          }
        }
      ]
    }
  ]
}
