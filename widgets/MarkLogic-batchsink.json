{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "MarkLogic",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this source for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "8002"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textbox",
          "label": "Path",
          "name": "path",
          "widget-attributes": {
            "placeholder": "/path/to/output"
          }
        },
        {
          "widget-type": "textbox",
          "label": "File Name Field",
          "name": "fileNameField"
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "name": "connectionType",
          "label": "Connection type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "direct",
            "options": [
              {
                "id": "direct",
                "label": "Direct"
              },
              {
                "id": "gateway",
                "label": "Gateway"
              }
            ]
          }
        },
        {
          "name": "authenticationType",
          "label": "Authentication Type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "digest",
            "options": [
              {
                "id": "digest",
                "label": "Digest"
              },
              {
                "id": "ssl",
                "label": "SSL"
              }
            ]
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "select",
          "label": "Format",
          "name": "format",
          "widget-attributes": {
            "values": [
              "json",
              "xml",
              "delimited"
            ],
            "default": "json"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Delimiter",
          "name": "delimiter",
          "widget-attributes": {
            "placeholder": "Delimiter if the format is 'delimited'"
          }
        },
        {
          "widget-type": "number",
          "label": "Batch Size",
          "name": "batchSize",
          "widget-attributes": {
            "default": "100"
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "delimitedFilter",
      "condition": {
        "property": "format",
        "operator": "equal to",
        "value": "delimited"
      },
      "show": [
        {
          "type": "property",
          "name": "delimiter"
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {}
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
